{
	"$schema": "https://biomejs.dev/schemas/1.7.3/schema.json",
	"files": {
		"include": ["package.json", "src/**"]
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"json": {
		"formatter": {
			"enabled": true
		},
		"parser": {
			"allowTrailingCommas": false,
			"allowComments": false
		}
	}
}
